<view class='apply-table'>
	<view class='apply-title'>反馈内容</view>
	<view class="apply-item">
		<view class="apply-item-title">反馈人姓名：</view>
		<view class="item-content">{{data.name}}</view>
	</view>
	<view class="apply-item">
		<view class="apply-item-title">联系方式：</view>
		<view class="item-content">{{data.contact}}</view>
	</view>
	<view class="apply-item">
		<view class="apply-item-title">反馈类别：</view>
		<view class="item-content">{{data.phone}}</view>
	</view>
	<view class="apply-item">
		<view class="apply-item-title">反馈内容：</view>
		<view class="item-content">{{data.content}}</view>
	</view>
	<view class="apply-item">
		<view class="apply-item-title">反馈时间：</view>
		<view class="item-content">{{data.created}}</view>
	</view>
	<view class="apply-item">
		<view class="apply-item-title">回复人姓名</view>
		<view class="item-content" wx:if="{{data.aname != null}}">{{data.aname}}</view>
    <view class="item-content" wx:else>?</view>
	</view>
	<view class="apply-item">
		<view class="apply-item-title">回复内容：</view>
		<view class="item-content" wx:if="{{data.acontent != null}}">{{data.acontent}}</view>
    <view class="item-content" wx:else>?</view>
	</view>
	<view class="apply-item">
		<view class="apply-item-title">回复时间：</view>
		<view class="item-content" wx:if="{{data.acontent != null}}">{{data.acreated}}</view>
    <view class="item-content" wx:else>?</view>
	</view>
	<image src='/images/bi.png' class="header-icon"></image>
</view>