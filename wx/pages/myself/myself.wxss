/* template/template.wxss */

.navigate_item{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  line-height: 100rpx;
}
.navigate_item image:first-child{
  width: 50rpx;
  height: 50rpx;
  padding: 0 0 0 20rpx;
  padding: 0 20rpx;
}
.navigate_item text{
  flex: 1;
  text-align: start;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.navigate_item image:last-child{
  width: 30rpx;
  height: 30rpx;
  padding: 0 20rpx;
}
/* userInfo_item */
.userInfo_item{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  line-height: 100rpx;
}
.userInfo_item image{
  width: 50rpx;
  height: 50rpx;
  padding: 0 20rpx 0 20rpx;
}
.user_info__image{width: 128rpx; height: 128rpx; border-radius: 100rpx; overflow: hidden; border: 6rpx solid #fff; margin-right: 32rpx; box-shadow: 0px 6rpx 12rpx rgba(0,0,0,0.16);}

.userInfo_item .title{
  flex: 1;
  text-align: start;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.userInfo_item text:last-child{
  margin-right: 20rpx;
  font-size: 20rpx;
  color: rgb(186, 186, 186);
  letter-spacing: 2rpx;
}
